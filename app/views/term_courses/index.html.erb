<p id="notice"><%= notice %></p>

<h1>Listing Term Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @term_courses.each do |term_course| %>
      <tr>
        <td><%= term_course.name %></td>
        <td><%= link_to 'Show', term_course %></td>
        <td><%= link_to 'Edit', edit_term_course_path(term_course) %></td>
        <td><%= link_to 'Destroy', term_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

